,person_stream_reward_id BIGSERIAL NOT NULL PRIMARY KEY
,stream_id BIGINT NOT NULL
,person_id BIGINT NOT NULL
,qty BIGINT NOT NULL
,create_dt_tm timestamptz NOT NULL
,updt_dt_tm timestamptz NOT NULL DEFAULT now()
)

WITH (
